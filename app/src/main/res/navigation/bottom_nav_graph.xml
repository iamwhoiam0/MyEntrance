<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.myentrance.presentation.view.main.NewsFragment"
        android:label="Новости"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_createNewsFragment"
            app:destination="@id/createNewsFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.myentrance.presentation.view.main.ChatFragment"
        android:label="Чат"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/createNewsFragment"
        android:name="com.example.myentrance.presentation.view.main.CreateNewsFragment"
        android:label="fragment_create_news"
        tools:layout="@layout/fragment_create_news" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myentrance.presentation.view.main.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_splashFragment"
            app:destination="@id/splashFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
